{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "title": "PlaylistSummary",
  "type": "object",
  "required": ["id", "ytId", "itemCount", "owner", "categories"],
  "properties": {
    "id": { "type": "string" },
    "ytId": { "type": "string" },
    "title": {
      "type": ["string", "null"],
      "description": "Optional Albunyaan override. Clients fetch original title via NewPipeExtractor when null."
    },
    "thumbnailUrl": {
      "type": ["string", "null"],
      "format": "uri",
      "description": "Optional override thumbnail."
    },
    "itemCount": { "type": "integer", "minimum": 0 },
    "owner": { "$ref": "channel-summary.json" },
    "categories": {
      "type": "array",
      "minItems": 1,
      "items": { "$ref": "category-tag.json" }
    },
    "downloadable": { "type": "boolean", "default": true }
  }
}
