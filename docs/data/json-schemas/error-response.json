{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "title": "ErrorResponse",
  "type": "object",
  "required": ["error", "message", "timestamp"],
  "properties": {
    "error": { "type": "string" },
    "message": { "type": "string" },
    "details": {
      "type": "array",
      "items": { "type": "string" }
    },
    "timestamp": { "type": "string", "format": "date-time" },
    "traceId": { "type": ["string", "null"] }
  }
}
