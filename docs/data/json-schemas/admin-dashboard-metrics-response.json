{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "title": "AdminDashboardMetricsResponse",
  "type": "object",
  "required": ["data", "meta"],
  "properties": {
    "data": {
      "type": "object",
      "required": ["pendingModeration", "categories", "moderators"],
      "properties": {
        "pendingModeration": {
          "$ref": "#/$defs/comparisonMetric"
        },
        "categories": {
          "type": "object",
          "required": ["total", "newThisPeriod", "previousTotal"],
          "properties": {
            "total": {
              "type": "integer",
              "minimum": 0
            },
            "newThisPeriod": {
              "type": "integer",
              "minimum": 0
            },
            "previousTotal": {
              "type": "integer",
              "minimum": 0
            }
          },
          "description": "Aggregated category counts scoped to admin allow-listed catalog."
        },
        "moderators": {
          "$ref": "#/$defs/comparisonMetric"
        }
      }
    },
    "meta": {
      "type": "object",
      "required": ["generatedAt", "timeRange", "cacheTtlSeconds"],
      "properties": {
        "generatedAt": {
          "type": "string",
          "format": "date-time"
        },
        "timeRange": {
          "type": "object",
          "required": ["start", "end", "label"],
          "properties": {
            "start": {
              "type": "string",
              "format": "date-time"
            },
            "end": {
              "type": "string",
              "format": "date-time"
            },
            "label": {
              "type": "string",
              "enum": ["LAST_24_HOURS", "LAST_7_DAYS", "LAST_30_DAYS"]
            }
          }
        },
        "cacheTtlSeconds": {
          "type": "integer",
          "minimum": 0,
          "maximum": 900
        },
        "warnings": {
          "type": "array",
          "items": {
            "type": "string",
            "maxLength": 160
          },
          "description": "Optional warnings surfaced to UI (e.g., stale data)."
        }
      }
    }
  },
  "$defs": {
    "comparisonMetric": {
      "type": "object",
      "required": ["current", "previous", "trend"],
      "properties": {
        "current": {
          "type": "integer",
          "minimum": 0
        },
        "previous": {
          "type": "integer",
          "minimum": 0
        },
        "trend": {
          "type": "string",
          "enum": ["UP", "DOWN", "FLAT"]
        },
        "thresholdBreached": {
          "type": "boolean"
        }
      },
      "description": "Count with comparison to previous time range and trend indicator."
    }
  }
}
