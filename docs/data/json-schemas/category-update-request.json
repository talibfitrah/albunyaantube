{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "title": "CategoryUpdateRequest",
  "type": "object",
  "properties": {
    "slug": { "type": "string", "pattern": "^[a-z0-9-]{2,40}$" },
    "name": {
      "type": "object",
      "minProperties": 1,
      "required": ["en"],
      "additionalProperties": { "type": "string", "maxLength": 80 }
    },
    "description": {
      "type": "object",
      "additionalProperties": { "type": "string", "maxLength": 240 }
    },
    "subcategories": {
      "type": "array",
      "items": {
        "type": "object",
        "required": ["slug", "name"],
        "properties": {
          "id": { "type": "string", "format": "uuid" },
          "slug": { "type": "string", "pattern": "^[a-z0-9-]{2,40}$" },
          "name": {
            "type": "object",
            "minProperties": 1,
            "additionalProperties": { "type": "string", "maxLength": 80 }
          }
        }
      },
      "description": "Replaces the entire subcategory collection when provided"
    }
  },
  "additionalProperties": false
}
