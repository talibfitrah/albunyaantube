{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "title": "VideoSummary",
  "type": "object",
  "required": ["id", "ytId", "durationSeconds", "publishedAt", "viewCount", "channel", "categories"],
  "properties": {
    "id": { "type": "string" },
    "ytId": { "type": "string" },
    "title": {
      "type": ["string", "null"],
      "description": "Optional Albunyaan override. Clients fetch canonical title via NewPipeExtractor when null."
    },
    "thumbnailUrl": {
      "type": ["string", "null"],
      "format": "uri",
      "description": "Optional override thumbnail."
    },
    "durationSeconds": { "type": "integer", "minimum": 0 },
    "publishedAt": { "type": "string", "format": "date-time" },
    "viewCount": { "type": "integer", "minimum": 0 },
    "channel": { "$ref": "channel-summary.json" },
    "categories": {
      "type": "array",
      "minItems": 1,
      "items": { "$ref": "category-tag.json" }
    },
    "bookmarked": { "type": "boolean" },
    "downloaded": { "type": "boolean" }
  }
}
