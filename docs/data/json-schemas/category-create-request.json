{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "title": "CategoryCreateRequest",
  "type": "object",
  "required": ["slug", "name"],
  "properties": {
    "slug": { "type": "string", "pattern": "^[a-z0-9-]{2,40}$" },
    "name": {
      "type": "object",
      "minProperties": 1,
      "required": ["en"],
      "properties": {
        "en": { "type": "string", "maxLength": 80 }
      },
      "additionalProperties": { "type": "string", "maxLength": 80 }
    },
    "description": {
      "type": "object",
      "additionalProperties": { "type": "string", "maxLength": 240 }
    },
    "subcategories": {
      "type": "array",
      "items": {
        "type": "object",
        "required": ["slug", "name"],
        "properties": {
          "id": { "type": "string", "format": "uuid" },
          "slug": { "type": "string", "pattern": "^[a-z0-9-]{2,40}$" },
          "name": {
            "type": "object",
            "minProperties": 1,
            "additionalProperties": { "type": "string", "maxLength": 80 }
          }
        }
      },
      "description": "Optional subcategories that belong to this category"
    }
  }
}
