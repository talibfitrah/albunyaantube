<?xml version="1.0" encoding="utf-8"?>
<resources>
    <!-- Tablet (7"+ devices) - Responsive Dimensions -->

    <!-- Navigation -->
    <dimen name="bottom_nav_height">0dp</dimen>  <!-- Use NavigationRail instead -->
    <dimen name="navigation_rail_width">80dp</dimen>
    <dimen name="navigation_rail_icon_size">28dp</dimen>  <!-- Slightly larger than phone -->

    <!-- Grid -->
    <dimen name="grid_gutter">24dp</dimen>
    <dimen name="grid_item_min_width">180dp</dimen>
    <integer name="grid_span_count_default">3</integer>

    <!-- Player -->
    <dimen name="player_portrait_height">360dp</dimen>  <!-- was 240dp on phone -->
    <dimen name="player_min_height">180dp</dimen>  <!-- was 120dp on phone -->
    <dimen name="player_controls_offset">64dp</dimen>

    <!-- Thumbnails (kept reasonable, not scaled up excessively) -->
    <dimen name="thumbnail_height">200dp</dimen>  <!-- modest increase from 180dp -->
    <dimen name="thumbnail_height_grid">120dp</dimen>  <!-- modest increase from 100dp -->
    <dimen name="playlist_thumbnail_size">100dp</dimen>  <!-- modest increase from 80dp -->

    <!-- Content -->
    <dimen name="content_max_width">1200dp</dimen>  <!-- constrain content width -->

    <!-- Spacing (increased for larger screens) -->
    <dimen name="spacing_md">20dp</dimen>  <!-- was 16dp -->
    <dimen name="spacing_lg">32dp</dimen>  <!-- was 24dp -->
    <dimen name="spacing_xl">48dp</dimen>  <!-- was 32dp -->
    <dimen name="spacing_xxxl">112dp</dimen>  <!-- was 96dp on phone -->

    <!-- Icons (slightly larger) -->
    <dimen name="icon_medium">36dp</dimen>  <!-- was 32dp -->
    <dimen name="icon_large">56dp</dimen>  <!-- was 48dp -->
    <dimen name="badge_icon_size">24dp</dimen>  <!-- was 20dp on phone -->

    <!-- Avatar Sizes (larger) -->
    <dimen name="avatar_medium">64dp</dimen>  <!-- was 56dp -->
    <dimen name="avatar_large">112dp</dimen>  <!-- was 96dp -->

    <!-- Screen Type -->
    <bool name="is_tablet">true</bool>
    <bool name="is_large_screen">true</bool>
    <bool name="use_two_pane_layout">true</bool>

    <!-- Home Screen - Tablet (smaller cards, more visible at once) -->
    <dimen name="home_horizontal_margin">24dp</dimen>
    <dimen name="home_vertical_section_spacing">32dp</dimen>
    <dimen name="home_channel_card_width">110dp</dimen>
    <dimen name="home_channel_avatar_size">80dp</dimen>
    <dimen name="home_playlist_card_width">240dp</dimen>  <!-- slightly larger than phone -->
    <dimen name="home_video_card_width">280dp</dimen>  <!-- slightly larger than phone -->
    <dimen name="home_card_spacing">16dp</dimen>

    <!-- Home Responsive Card Counts (Tablet) -->
    <integer name="home_cards_visible_channels">4</integer>
    <integer name="home_cards_visible_playlists">3</integer>
    <integer name="home_cards_visible_videos">3</integer>

    <!-- Onboarding (Tablet) - smaller icon to leave room for text -->
    <dimen name="onboarding_icon_container_size">160dp</dimen>
    <dimen name="onboarding_icon_size">80dp</dimen>
    <dimen name="onboarding_title_size">32sp</dimen>
    <dimen name="onboarding_description_size">18sp</dimen>
    <dimen name="onboarding_padding">32dp</dimen>
    <dimen name="onboarding_button_height">60dp</dimen>
    <dimen name="onboarding_button_corner_radius">30dp</dimen>

    <!-- Channel Detail Screen (Tablet) -->
    <dimen name="channel_banner_height">220dp</dimen>
    <dimen name="channel_avatar_size">96dp</dimen>
    <dimen name="channel_avatar_stroke">4dp</dimen>
    <dimen name="channel_header_overlap">48dp</dimen>
    <dimen name="channel_header_horizontal_margin">32dp</dimen>

    <!-- Channel Shorts Grid (Tablet) -->
    <integer name="channel_shorts_span_count">4</integer>

    <!-- Playlist Detail Screen (Tablet) -->
    <dimen name="playlist_banner_height">240dp</dimen>
    <dimen name="banner_gradient_top_height">80dp</dimen>
    <dimen name="playlist_header_horizontal_margin">32dp</dimen>

    <!-- Playlist Hero Component (Tablet) -->
    <dimen name="playlist_hero_height">280dp</dimen>
    <dimen name="playlist_hero_thumbnail_max_width">480dp</dimen>

    <!-- Error State Component (Tablet) -->
    <dimen name="error_body_max_width">400dp</dimen>
    <dimen name="button_min_width">140dp</dimen>

    <!-- Download/Favorite List Item Thumbnail (Tablet - larger for readability) -->
    <dimen name="favorite_thumbnail_width">160dp</dimen>
    <dimen name="favorite_thumbnail_height">90dp</dimen>
</resources>
