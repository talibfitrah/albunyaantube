<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/app_nav_graph"
    app:startDestination="@id/splashFragment">

    <fragment
        android:id="@+id/splashFragment"
        android:name="com.albunyaan.tube.ui.SplashFragment"
        android:label="Splash">
        <action
            android:id="@+id/action_splash_to_onboarding"
            app:destination="@id/onboardingFragment"
            app:launchSingleTop="true"/>
        <action
            android:id="@+id/action_splash_to_main"
            app:destination="@id/mainShellFragment"
            app:popUpTo="@id/app_nav_graph"
            app:popUpToInclusive="true"
            app:launchSingleTop="true"/>
    </fragment>

    <fragment
        android:id="@+id/onboardingFragment"
        android:name="com.albunyaan.tube.ui.OnboardingFragment"
        android:label="Onboarding">
        <action
            android:id="@+id/action_onboarding_to_main"
            app:destination="@id/mainShellFragment"
            app:popUpTo="@id/app_nav_graph"
            app:popUpToInclusive="true"
            app:launchSingleTop="true"/>
    </fragment>

    <fragment
        android:id="@+id/mainShellFragment"
        android:name="com.albunyaan.tube.ui.MainShellFragment"
        android:label="FitrahTube" />

</navigation>
