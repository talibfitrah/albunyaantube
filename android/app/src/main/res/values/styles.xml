<?xml version="1.0" encoding="utf-8"?>
<resources>
    <!-- Filter Chip Style (Design Spec: 20dp radius, primary outline) -->
    <style name="Widget.Albunyaan.Chip.Filter" parent="Widget.Material3.Chip.Filter">
        <item name="chipCornerRadius">@dimen/filter_chip_radius</item>
        <item name="chipMinHeight">@dimen/filter_chip_height</item>
        <item name="chipStrokeColor">@color/primary_green</item>
        <item name="chipStrokeWidth">1dp</item>
        <item name="chipBackgroundColor">@android:color/white</item>
        <item name="android:textColor">@color/primary_green</item>
        <item name="chipIconVisible">false</item>
        <item name="checkedIconVisible">false</item>
    </style>

    <!-- Selected Filter Chip Style (Design Spec: Filled background) -->
    <style name="Widget.Albunyaan.Chip.Filter.Selected">
        <item name="chipBackgroundColor">@color/primary_green</item>
        <item name="android:textColor">@android:color/white</item>
    </style>

    <!-- Home Screen Typography -->
    <style name="TextAppearance.Home.SectionTitle" parent="TextAppearance.Material3.TitleLarge">
        <item name="android:textSize">@dimen/home_section_title_size</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/home_text_primary</item>
        <item name="android:letterSpacing">-0.01</item>
    </style>

    <style name="TextAppearance.Home.ItemTitle" parent="TextAppearance.Material3.TitleMedium">
        <item name="android:textSize">@dimen/home_item_title_size</item>
        <item name="android:textStyle">normal</item>
        <item name="fontFamily">sans-serif-medium</item>
        <item name="android:textColor">@color/home_text_primary</item>
        <item name="android:maxLines">2</item>
        <item name="android:ellipsize">end</item>
    </style>

    <style name="TextAppearance.Home.ItemMeta" parent="TextAppearance.Material3.BodySmall">
        <item name="android:textSize">@dimen/home_item_meta_size</item>
        <item name="android:textColor">@color/home_text_secondary</item>
        <item name="android:maxLines">2</item>
        <item name="android:ellipsize">end</item>
    </style>

    <style name="TextAppearance.Home.SeeAll" parent="TextAppearance.Material3.LabelLarge">
        <item name="android:textSize">@dimen/home_see_all_size</item>
        <item name="android:textColor">@color/primary_green</item>
        <item name="fontFamily">sans-serif-medium</item>
    </style>

    <style name="TextAppearance.Home.ChannelName" parent="TextAppearance.Material3.BodyMedium">
        <item name="android:textSize">13sp</item>
        <item name="android:textStyle">normal</item>
        <item name="fontFamily">sans-serif-medium</item>
        <item name="android:textColor">@color/home_text_primary</item>
        <item name="android:maxLines">2</item>
        <item name="android:ellipsize">end</item>
        <item name="android:gravity">center</item>
    </style>

    <style name="TextAppearance.Home.Duration" parent="TextAppearance.Material3.LabelSmall">
        <item name="android:textSize">11sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@android:color/white</item>
    </style>

    <style name="TextAppearance.Home.TypeBadge" parent="TextAppearance.Material3.LabelSmall">
        <item name="android:textSize">10sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="android:textAllCaps">true</item>
    </style>

    <!-- Home Category Pill -->
    <style name="Widget.Albunyaan.CategoryPill" parent="Widget.Material3.CardView.Filled">
        <item name="cardCornerRadius">999dp</item>
        <item name="cardBackgroundColor">@color/home_category_pill_bg</item>
        <item name="cardElevation">1dp</item>
        <item name="android:minHeight">@dimen/home_category_pill_height</item>
    </style>

    <!-- Home Content Card -->
    <style name="Widget.Albunyaan.HomeCard" parent="Widget.Material3.CardView.Filled">
        <item name="cardCornerRadius">@dimen/home_card_corner_radius</item>
        <item name="cardBackgroundColor">@color/home_card_background</item>
        <item name="cardElevation">@dimen/home_card_elevation</item>
        <item name="cardUseCompatPadding">true</item>
    </style>

    <!-- Base style for media cards -->
    <style name="Widget.Albunyaan.MediaCard" parent="Widget.Material3.CardView.Filled">
        <item name="cardCornerRadius">@dimen/home_card_corner_radius</item>
        <item name="cardElevation">@dimen/home_card_elevation</item>
        <item name="cardBackgroundColor">@color/home_card_background</item>
        <item name="cardUseCompatPadding">false</item>
        <item name="contentPadding">0dp</item>
    </style>

    <!-- Style for media card titles -->
    <style name="Widget.Albunyaan.MediaCard.Title">
        <item name="android:textAppearance">@style/TextAppearance.Home.ItemTitle</item>
    </style>

    <!-- Style for media card metadata -->
    <style name="Widget.Albunyaan.MediaCard.Metadata">
        <item name="android:textAppearance">@style/TextAppearance.Home.ItemMeta</item>
    </style>

    <!-- Circle Image Shape Appearance (for ShapeableImageView avatars) -->
    <style name="ShapeAppearance.Albunyaan.CircleImageView" parent="ShapeAppearance.MaterialComponents.SmallComponent">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">50%</item>
    </style>

    <!-- Top Rounded Shape Appearance (for thumbnails inside cards) -->
    <style name="ShapeAppearance.Albunyaan.TopRounded" parent="ShapeAppearance.MaterialComponents.SmallComponent">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSizeTopLeft">@dimen/corner_radius_medium</item>
        <item name="cornerSizeTopRight">@dimen/corner_radius_medium</item>
        <item name="cornerSizeBottomLeft">0dp</item>
        <item name="cornerSizeBottomRight">0dp</item>
    </style>

    <!-- Channel Detail Typography -->
    <style name="TextAppearance.Channel.Title" parent="TextAppearance.Material3.HeadlineSmall">
        <item name="android:textSize">@dimen/text_headline</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">?attr/colorOnSurface</item>
    </style>

    <style name="TextAppearance.Channel.Subtitle" parent="TextAppearance.Material3.BodyMedium">
        <item name="android:textSize">@dimen/text_body</item>
        <item name="android:textColor">@color/primary_green</item>
    </style>

    <style name="TextAppearance.Channel.Summary" parent="TextAppearance.Material3.BodySmall">
        <item name="android:textSize">@dimen/text_body</item>
        <item name="android:textColor">?attr/colorOnSurfaceVariant</item>
    </style>

    <!-- Live Badge -->
    <style name="Widget.Albunyaan.LiveBadge" parent="">
        <item name="android:textSize">10sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="android:textAllCaps">true</item>
        <item name="android:paddingStart">6dp</item>
        <item name="android:paddingEnd">6dp</item>
        <item name="android:paddingTop">2dp</item>
        <item name="android:paddingBottom">2dp</item>
        <item name="android:background">@drawable/bg_live_badge</item>
    </style>

    <style name="Widget.Albunyaan.UpcomingBadge" parent="Widget.Albunyaan.LiveBadge">
        <item name="android:background">@drawable/bg_upcoming_badge</item>
    </style>
</resources>
