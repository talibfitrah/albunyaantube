<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <!-- Toolbar with back button -->
    <com.google.android.material.appbar.MaterialToolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:background="?attr/colorSurface"
        android:elevation="4dp"
        app:navigationIcon="?attr/homeAsUpIndicator"
        app:title="Playlist"
        app:titleTextColor="@android:color/black"/>

    <!-- Loading State -->
    <ProgressBar
        android:id="@+id/progressBar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="100dp"
        android:visibility="gone"
        tools:visibility="visible"/>

    <!-- Error State -->
    <TextView
        android:id="@+id/errorText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="16dp"
        android:gravity="center"
        android:padding="16dp"
        android:textColor="@color/accent_red"
        android:visibility="gone"
        tools:text="Error loading playlist"
        tools:visibility="visible"/>

    <!-- Content Container -->
    <androidx.core.widget.NestedScrollView
        android:id="@+id/contentContainer"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:visibility="gone"
        android:paddingBottom="80dp"
        android:clipToPadding="false"
        tools:visibility="visible">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="16dp">

            <!-- Exclusion Banner -->
            <TextView
                android:id="@+id/exclusionBanner"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="12dp"
                android:background="@color/accent_red"
                android:textColor="@android:color/white"
                android:text="@string/detail_excluded_banner"
                android:visibility="gone"
                android:layout_marginBottom="12dp"/>

            <!-- Hero Container -->
            <FrameLayout
                android:id="@+id/heroContainer"
                android:layout_width="match_parent"
                android:layout_height="200dp"
                android:background="@color/surface_variant"
                android:gravity="center">

                <TextView
                    android:id="@+id/heroInitial"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:textAppearance="@style/TextAppearance.MaterialComponents.Headline2"
                    android:textColor="@color/primary_green"
                    tools:text="P"/>
            </FrameLayout>

            <!-- Playlist Info -->
            <TextView
                android:id="@+id/playlistTitle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingTop="16dp"
                android:textSize="20sp"
                android:textStyle="bold"
                android:textColor="@android:color/black"
                tools:text="Complete Quran Recitation"/>

            <TextView
                android:id="@+id/playlistCategory"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingTop="4dp"
                android:textSize="14sp"
                android:textColor="@android:color/darker_gray"
                tools:text="Quran"/>

            <TextView
                android:id="@+id/playlistItemCount"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingTop="2dp"
                android:textSize="14sp"
                android:textColor="@android:color/darker_gray"
                tools:text="30 videos"/>

            <TextView
                android:id="@+id/playlistDescription"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingTop="12dp"
                android:textSize="14sp"
                android:textColor="@android:color/black"
                android:visibility="gone"
                tools:text="Playlist description goes here..."
                tools:visibility="visible"/>

            <!-- Download Button -->
            <com.google.android.material.button.MaterialButton
                android:id="@+id/downloadButton"
                style="@style/Widget.MaterialComponents.Button"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="24dp"
                android:backgroundTint="@color/primary_green"
                android:text="@string/playlist_detail_download"/>

            <TextView
                android:id="@+id/downloadHint"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingTop="8dp"
                android:textSize="12sp"
                android:textColor="@android:color/darker_gray"
                android:text="@string/playlist_detail_download_hint"/>

            <!-- Videos Section -->
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="24dp"
                android:layout_marginBottom="8dp"
                android:text="@string/playlist_videos_title"
                android:textSize="18sp"
                android:textStyle="bold"
                android:textColor="@android:color/black"/>

            <ProgressBar
                android:id="@+id/videosProgressBar"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:visibility="gone"
                tools:visibility="visible"/>

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/videosRecyclerView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:nestedScrollingEnabled="false"
                tools:listitem="@layout/item_video"
                tools:itemCount="3"/>

        </LinearLayout>

    </androidx.core.widget.NestedScrollView>

</LinearLayout>
