<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="@dimen/spacing_md"
    android:background="@drawable/download_item_background"
    android:layout_marginBottom="@dimen/spacing_sm">

    <!-- Content row: thumbnail + details -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <!-- Thumbnail with 16:9 aspect ratio -->
        <com.google.android.material.imageview.ShapeableImageView
            android:id="@+id/downloadThumbnail"
            android:layout_width="@dimen/favorite_thumbnail_width"
            android:layout_height="@dimen/favorite_thumbnail_height"
            android:scaleType="centerCrop"
            android:contentDescription="@string/cd_video_thumbnail"
            app:shapeAppearanceOverlay="@style/ShapeAppearance.Albunyaan.SmallComponent"
            tools:src="@tools:sample/backgrounds/scenic" />

        <!-- Text content -->
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical"
            android:layout_marginStart="@dimen/spacing_sm"
            android:layout_gravity="center_vertical">

            <TextView
                android:id="@+id/downloadTitle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textAppearance="@style/TextAppearance.MaterialComponents.Subtitle1"
                android:maxLines="2"
                android:ellipsize="end"
                tools:text="Download title goes here with long text" />

            <TextView
                android:id="@+id/downloadStatus"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingTop="@dimen/spacing_xs"
                android:textAppearance="@style/TextAppearance.MaterialComponents.Body2"
                tools:text="Downloading" />

            <TextView
                android:id="@+id/downloadDetails"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingTop="@dimen/spacing_xxs"
                android:textAppearance="@style/TextAppearance.MaterialComponents.Caption"
                android:visibility="gone"
                tools:text="45 MB â€¢ 2 hours ago"
                tools:visibility="visible" />

        </LinearLayout>
    </LinearLayout>

    <com.google.android.material.progressindicator.LinearProgressIndicator
        android:id="@+id/downloadProgress"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/spacing_sm"
        android:progress="0"
        app:showAnimationBehavior="inward"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="@dimen/spacing_sm"
        android:gravity="end">

        <Button
            android:id="@+id/downloadPauseResume"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/download_action_pause"/>

        <Button
            android:id="@+id/downloadRetry"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/spacing_sm"
            android:text="@string/download_action_retry"
            android:visibility="gone"
            tools:visibility="visible"/>

        <Button
            android:id="@+id/downloadRemove"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/spacing_sm"
            android:text="@string/download_action_remove"
            android:visibility="gone"/>

        <Button
            android:id="@+id/downloadCancel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/spacing_sm"
            android:text="@string/download_action_cancel"/>

        <Button
            android:id="@+id/downloadOpen"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/spacing_sm"
            android:text="@string/download_action_open"
            android:visibility="gone"/>

        <Button
            android:id="@+id/downloadDelete"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/spacing_sm"
            android:text="@string/download_action_delete"
            android:visibility="gone"/>
    </LinearLayout>

</LinearLayout>
