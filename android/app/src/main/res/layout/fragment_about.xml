<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="?attr/colorSurfaceVariant">

    <!-- Toolbar -->
    <com.google.android.material.appbar.MaterialToolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:background="?attr/colorSurface"
        android:elevation="@dimen/elevation_sm"
        app:navigationIcon="?attr/homeAsUpIndicator"
        app:title="@string/about_title"
        app:titleTextAppearance="@style/TextAppearance.MaterialComponents.Headline6"
        app:titleTextColor="?attr/colorOnSurface"/>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="@dimen/spacing_md">

            <!-- App Info Card -->
            <com.google.android.material.card.MaterialCardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/spacing_lg"
                app:cardBackgroundColor="?attr/colorSurface"
                app:cardCornerRadius="@dimen/corner_radius_medium"
                app:cardElevation="0dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="@dimen/spacing_lg"
                    android:gravity="center">

                    <!-- App Icon Placeholder -->
                    <View
                        android:layout_width="@dimen/channel_avatar_size"
                        android:layout_height="@dimen/channel_avatar_size"
                        android:background="@color/primary_variant"
                        android:layout_marginBottom="@dimen/spacing_md"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/app_name"
                        android:textSize="@dimen/text_headline"
                        android:textStyle="bold"
                        android:textColor="?attr/colorOnSurface"
                        android:textAlignment="center"
                        android:layout_marginBottom="@dimen/spacing_xs"/>

                    <com.google.android.material.textview.MaterialTextView
                        android:id="@+id/versionText"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="@dimen/text_body"
                        android:textColor="?attr/colorOnSurfaceVariant"
                        android:textAlignment="center"
                        android:layout_marginBottom="@dimen/spacing_sm"
                        tools:text="Version 0.1.0"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/splash_tagline"
                        android:textSize="@dimen/text_body"
                        android:textColor="?attr/colorOnSurfaceVariant"
                        android:textAlignment="center"
                        android:gravity="center"/>

                </LinearLayout>
            </com.google.android.material.card.MaterialCardView>

            <!-- Links Section -->
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/about_links"
                android:textSize="@dimen/text_section_title"
                android:textStyle="bold"
                android:textColor="?attr/colorOnSurface"
                android:textAlignment="viewStart"
                android:layout_marginBottom="@dimen/spacing_sm"/>

            <com.google.android.material.card.MaterialCardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/spacing_lg"
                app:cardBackgroundColor="?attr/colorSurface"
                app:cardCornerRadius="@dimen/corner_radius_medium"
                app:cardElevation="0dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <!-- Website -->
                    <LinearLayout
                        android:id="@+id/websiteItem"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:padding="@dimen/spacing_md"
                        android:background="?attr/selectableItemBackground"
                        android:clickable="true"
                        android:focusable="true">

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="@string/about_website"
                            android:textSize="@dimen/text_body"
                            android:textColor="?attr/colorOnSurface"
                            android:textAlignment="viewStart"/>

                        <ImageView
                            android:layout_width="@dimen/icon_small"
                            android:layout_height="@dimen/icon_small"
                            android:src="@drawable/ic_chevron_right"
                            android:importantForAccessibility="no"
                            android:autoMirrored="true"
                            app:tint="?attr/colorOnSurfaceVariant"/>
                    </LinearLayout>

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/divider_thickness"
                        android:background="?attr/colorSurfaceVariant"
                        android:layout_marginStart="@dimen/spacing_md"/>

                    <!-- GitHub -->
                    <LinearLayout
                        android:id="@+id/githubItem"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:padding="@dimen/spacing_md"
                        android:background="?attr/selectableItemBackground"
                        android:clickable="true"
                        android:focusable="true">

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="@string/about_github"
                            android:textSize="@dimen/text_body"
                            android:textColor="?attr/colorOnSurface"
                            android:textAlignment="viewStart"/>

                        <ImageView
                            android:layout_width="@dimen/icon_small"
                            android:layout_height="@dimen/icon_small"
                            android:src="@drawable/ic_chevron_right"
                            android:importantForAccessibility="no"
                            android:autoMirrored="true"
                            app:tint="?attr/colorOnSurfaceVariant"/>
                    </LinearLayout>

                </LinearLayout>
            </com.google.android.material.card.MaterialCardView>

            <!-- Legal Section -->
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/about_legal"
                android:textSize="@dimen/text_section_title"
                android:textStyle="bold"
                android:textColor="?attr/colorOnSurface"
                android:textAlignment="viewStart"
                android:layout_marginBottom="@dimen/spacing_sm"/>

            <com.google.android.material.card.MaterialCardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:cardBackgroundColor="?attr/colorSurface"
                app:cardCornerRadius="@dimen/corner_radius_medium"
                app:cardElevation="0dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <!-- Privacy Policy -->
                    <LinearLayout
                        android:id="@+id/privacyItem"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:padding="@dimen/spacing_md"
                        android:background="?attr/selectableItemBackground"
                        android:clickable="true"
                        android:focusable="true">

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="@string/about_privacy_policy"
                            android:textSize="@dimen/text_body"
                            android:textColor="?attr/colorOnSurface"
                            android:textAlignment="viewStart"/>

                        <ImageView
                            android:layout_width="@dimen/icon_small"
                            android:layout_height="@dimen/icon_small"
                            android:src="@drawable/ic_chevron_right"
                            android:importantForAccessibility="no"
                            android:autoMirrored="true"
                            app:tint="?attr/colorOnSurfaceVariant"/>
                    </LinearLayout>

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/divider_thickness"
                        android:background="?attr/colorSurfaceVariant"
                        android:layout_marginStart="@dimen/spacing_md"/>

                    <!-- Terms of Service -->
                    <LinearLayout
                        android:id="@+id/termsItem"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:padding="@dimen/spacing_md"
                        android:background="?attr/selectableItemBackground"
                        android:clickable="true"
                        android:focusable="true">

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="@string/about_terms_of_service"
                            android:textSize="@dimen/text_body"
                            android:textColor="?attr/colorOnSurface"
                            android:textAlignment="viewStart"/>

                        <ImageView
                            android:layout_width="@dimen/icon_small"
                            android:layout_height="@dimen/icon_small"
                            android:src="@drawable/ic_chevron_right"
                            android:importantForAccessibility="no"
                            android:autoMirrored="true"
                            app:tint="?attr/colorOnSurfaceVariant"/>
                    </LinearLayout>

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/divider_thickness"
                        android:background="?attr/colorSurfaceVariant"
                        android:layout_marginStart="@dimen/spacing_md"/>

                    <!-- Open Source Licenses -->
                    <LinearLayout
                        android:id="@+id/licensesItem"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:padding="@dimen/spacing_md"
                        android:background="?attr/selectableItemBackground"
                        android:clickable="true"
                        android:focusable="true">

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="@string/about_open_source_licenses"
                            android:textSize="@dimen/text_body"
                            android:textColor="?attr/colorOnSurface"
                            android:textAlignment="viewStart"/>

                        <ImageView
                            android:layout_width="@dimen/icon_small"
                            android:layout_height="@dimen/icon_small"
                            android:src="@drawable/ic_chevron_right"
                            android:importantForAccessibility="no"
                            android:autoMirrored="true"
                            app:tint="?attr/colorOnSurfaceVariant"/>
                    </LinearLayout>

                </LinearLayout>
            </com.google.android.material.card.MaterialCardView>

        </LinearLayout>
    </ScrollView>

</LinearLayout>
