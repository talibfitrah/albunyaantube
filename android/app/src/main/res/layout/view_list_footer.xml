<?xml version="1.0" encoding="utf-8"?>
<!-- Footer view for lists showing item count and freshness.
     Note: paginationStatus text must be set programmatically using
     resources.getQuantityString(R.plurals.list_footer_status, count, count) -->
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="16dp"
    android:gravity="center_horizontal">

    <TextView
        android:id="@+id/paginationStatus"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="@style/TextAppearance.MaterialComponents.Body2"
        tools:text="Showing 10 items"/>

    <TextView
        android:id="@+id/cacheFreshness"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="@style/TextAppearance.MaterialComponents.Caption"
        android:text="@string/list_footer_freshness"
        android:paddingTop="4dp"/>
</LinearLayout>
