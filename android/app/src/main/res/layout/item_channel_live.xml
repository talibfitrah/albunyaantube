<?xml version="1.0" encoding="utf-8"?>
<!-- Item layout for Live streams in the Channel Live tab -->
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingStart="@dimen/spacing_md"
    android:paddingEnd="@dimen/spacing_md"
    android:paddingTop="@dimen/spacing_sm"
    android:paddingBottom="@dimen/spacing_sm"
    android:background="?attr/selectableItemBackground"
    android:clickable="true"
    android:focusable="true">

    <!-- Thumbnail container with MaterialCardView for rounded corners -->
    <com.google.android.material.card.MaterialCardView
        android:id="@+id/thumbnailCard"
        android:layout_width="@dimen/video_list_thumbnail_width"
        android:layout_height="0dp"
        app:cardCornerRadius="@dimen/home_thumbnail_corner_radius"
        app:cardElevation="0dp"
        app:strokeWidth="0dp"
        app:layout_constraintDimensionRatio="16:9"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <FrameLayout
            android:id="@+id/thumbnailContainer"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <ImageView
                android:id="@+id/streamThumbnail"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:scaleType="centerCrop"
                android:background="@color/surface_variant"
                android:contentDescription="@string/cd_live_stream_thumbnail"
                tools:src="@drawable/thumbnail_placeholder" />

            <!-- LIVE Badge (bottom-left) -->
            <TextView
                android:id="@+id/liveBadge"
                style="@style/Widget.Albunyaan.LiveBadge"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="bottom|start"
                android:layout_margin="@dimen/spacing_xs"
                android:text="@string/live_badge"
                android:visibility="gone"
                tools:visibility="visible" />

            <!-- UPCOMING Badge (bottom-left, alternative to LIVE) -->
            <TextView
                android:id="@+id/upcomingBadge"
                style="@style/Widget.Albunyaan.UpcomingBadge"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="bottom|start"
                android:layout_margin="@dimen/spacing_xs"
                android:text="@string/upcoming_badge"
                android:visibility="gone"
                tools:visibility="gone" />

            <!-- Duration Overlay (bottom-right, for past/recorded streams) -->
            <TextView
                android:id="@+id/streamDuration"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="bottom|end"
                android:layout_margin="@dimen/spacing_xs"
                android:paddingStart="@dimen/home_duration_chip_padding_horizontal"
                android:paddingEnd="@dimen/home_duration_chip_padding_horizontal"
                android:paddingTop="@dimen/home_duration_chip_padding_vertical"
                android:paddingBottom="@dimen/home_duration_chip_padding_vertical"
                android:background="@drawable/duration_badge_background"
                android:textColor="?attr/colorOnPrimary"
                android:textSize="@dimen/text_duration"
                android:textStyle="bold"
                android:visibility="gone"
                tools:text="1:23:45"
                tools:visibility="gone" />

        </FrameLayout>

    </com.google.android.material.card.MaterialCardView>

    <!-- Stream Title -->
    <TextView
        android:id="@+id/streamTitle"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/spacing_md"
        android:textSize="@dimen/text_subtitle"
        android:textStyle="bold"
        android:textColor="?attr/colorOnSurface"
        android:maxLines="2"
        android:ellipsize="end"
        android:textAlignment="viewStart"
        app:layout_constraintStart_toEndOf="@id/thumbnailCard"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@id/thumbnailCard"
        tools:text="Live Stream Title" />

    <!-- Stream Meta (viewers / views + date) -->
    <TextView
        android:id="@+id/streamMeta"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/spacing_xs"
        android:textSize="@dimen/home_item_meta_size"
        android:textColor="?attr/colorOnSurfaceVariant"
        android:maxLines="2"
        android:ellipsize="end"
        android:textAlignment="viewStart"
        app:layout_constraintStart_toStartOf="@id/streamTitle"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/streamTitle"
        tools:text="100K views â€¢ Streamed 2 weeks ago" />

</androidx.constraintlayout.widget.ConstraintLayout>
