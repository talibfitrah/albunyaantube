<?xml version="1.0" encoding="utf-8"?>
<!-- Item layout for Live streams in the Channel Live tab -->
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="@dimen/spacing_md"
    android:background="?attr/selectableItemBackground"
    android:clickable="true"
    android:focusable="true">

    <!-- Thumbnail container -->
    <FrameLayout
        android:id="@+id/thumbnailContainer"
        android:layout_width="@dimen/video_list_thumbnail_width"
        android:layout_height="0dp"
        app:layout_constraintDimensionRatio="16:9"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <ImageView
            android:id="@+id/streamThumbnail"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scaleType="centerCrop"
            android:background="@drawable/thumbnail_placeholder"
            android:clipToOutline="true"
            android:outlineProvider="background"
            android:contentDescription="@null"
            android:importantForAccessibility="no"
            tools:src="@drawable/thumbnail_placeholder" />

        <!-- LIVE Badge (bottom-left) -->
        <TextView
            android:id="@+id/liveBadge"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom|start"
            android:layout_margin="@dimen/spacing_xs"
            style="@style/Widget.Albunyaan.LiveBadge"
            android:text="@string/live_badge"
            android:visibility="gone"
            tools:visibility="visible" />

        <!-- UPCOMING Badge (bottom-left, alternative to LIVE) -->
        <TextView
            android:id="@+id/upcomingBadge"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom|start"
            android:layout_margin="@dimen/spacing_xs"
            style="@style/Widget.Albunyaan.UpcomingBadge"
            android:text="@string/upcoming_badge"
            android:visibility="gone"
            tools:visibility="gone" />

    </FrameLayout>

    <!-- Stream Title -->
    <TextView
        android:id="@+id/streamTitle"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/spacing_md"
        android:textSize="16sp"
        android:textStyle="bold"
        android:textColor="?android:attr/textColorPrimary"
        android:maxLines="2"
        android:ellipsize="end"
        android:textAlignment="viewStart"
        app:layout_constraintStart_toEndOf="@id/thumbnailContainer"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@id/thumbnailContainer"
        tools:text="Live Stream Title" />

    <!-- Stream Meta (viewers / scheduled time) -->
    <TextView
        android:id="@+id/streamMeta"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/spacing_xs"
        android:textSize="13sp"
        android:textColor="?android:attr/textColorSecondary"
        android:maxLines="1"
        android:ellipsize="end"
        android:textAlignment="viewStart"
        app:layout_constraintStart_toStartOf="@id/streamTitle"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/streamTitle"
        tools:text="1.5K watching" />

</androidx.constraintlayout.widget.ConstraintLayout>
