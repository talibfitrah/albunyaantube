<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="?attr/colorSurface">

    <com.google.android.material.appbar.AppBarLayout
        android:id="@+id/appBarLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@android:color/black"
        app:elevation="0dp">

        <!-- CollapsingToolbarLayout for scroll-to-shrink behavior -->
        <com.google.android.material.appbar.CollapsingToolbarLayout
            android:id="@+id/collapsingToolbar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:minHeight="@dimen/player_min_height"
            app:layout_scrollFlags="scroll|exitUntilCollapsed|snap"
            app:scrimVisibleHeightTrigger="0dp"
            app:contentScrim="@android:color/black"
            app:toolbarId="@+id/playerToolbarPlaceholder">

            <!-- ConstraintLayout wrapper to enforce 16:9 aspect ratio for the player -->
            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/playerContainer"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:layout_collapseMode="none">

                <androidx.media3.ui.PlayerView
                    android:id="@+id/playerView"
                    android:layout_width="0dp"
                    android:layout_height="0dp"
                    android:keepScreenOn="true"
                    android:contentDescription="@string/player_video_player"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintDimensionRatio="16:9"
                    app:resize_mode="fit"
                    app:shutter_background_color="@android:color/black"
                    app:use_artwork="false"
                    app:show_buffering="when_playing"
                    app:use_controller="true"
                    app:show_subtitle_button="true"
                    app:show_shuffle_button="false"
                    app:show_timeout="5000"
                    app:auto_show="true"
                    app:hide_on_touch="true" />

            </androidx.constraintlayout.widget.ConstraintLayout>

            <!-- Error Overlay - shown when stream resolution fails -->
            <!-- Uses ConstraintLayout wrapper for 16:9 aspect ratio matching the player -->
            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/playerErrorOverlay"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:visibility="gone"
                app:layout_collapseMode="none">

                <FrameLayout
                    android:layout_width="0dp"
                    android:layout_height="0dp"
                    android:background="@color/player_error_overlay"
                    android:layoutDirection="locale"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintDimensionRatio="16:9">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:orientation="vertical"
                    android:padding="@dimen/spacing_lg">

                    <ImageView
                        android:layout_width="@dimen/icon_large"
                        android:layout_height="@dimen/icon_large"
                        android:src="@drawable/ic_error"
                        app:tint="@android:color/white"
                        android:importantForAccessibility="no" />

                    <TextView
                        android:id="@+id/playerErrorTitle"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/spacing_md"
                        android:text="@string/player_error_title"
                        android:textColor="@android:color/white"
                        android:textSize="@dimen/text_headline"
                        android:textStyle="bold"
                        android:textAlignment="center" />

                    <TextView
                        android:id="@+id/playerErrorMessage"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/spacing_sm"
                        android:text="@string/player_error_message"
                        android:textColor="@android:color/white"
                        android:textAlignment="center"
                        android:textSize="@dimen/text_body" />

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/spacing_lg"
                        android:orientation="horizontal">

                        <com.google.android.material.button.MaterialButton
                            android:id="@+id/playerRetryButton"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/player_retry"
                            style="@style/Widget.Material3.Button" />

                        <com.google.android.material.button.MaterialButton
                            android:id="@+id/playerRefreshStreamButton"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="@dimen/spacing_sm"
                            android:text="@string/player_refresh_stream"
                            style="@style/Widget.Material3.Button.OutlinedButton" />

                    </LinearLayout>

                </LinearLayout>

                </FrameLayout>

            </androidx.constraintlayout.widget.ConstraintLayout>

            <!-- Recovery Overlay - shown during automatic recovery attempts -->
            <!-- Uses ConstraintLayout wrapper for 16:9 aspect ratio matching the player -->
            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/playerRecoveryOverlay"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:visibility="gone"
                app:layout_collapseMode="none">

                <FrameLayout
                    android:layout_width="0dp"
                    android:layout_height="0dp"
                    android:background="@color/player_recovery_overlay"
                    android:layoutDirection="locale"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintDimensionRatio="16:9">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:orientation="vertical"
                    android:padding="@dimen/spacing_lg">

                    <ProgressBar
                        android:id="@+id/playerRecoveryProgress"
                        android:layout_width="@dimen/icon_large"
                        android:layout_height="@dimen/icon_large"
                        android:indeterminate="true" />

                    <TextView
                        android:id="@+id/playerRecoveryMessage"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/spacing_md"
                        android:text="@string/player_recovering"
                        android:textColor="@android:color/white"
                        android:textSize="@dimen/text_subtitle"
                        android:textAlignment="center" />

                    <com.google.android.material.button.MaterialButton
                        android:id="@+id/playerRecoveryRetryButton"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/spacing_md"
                        android:text="@string/player_retry"
                        android:visibility="gone"
                        style="@style/Widget.Material3.Button.OutlinedButton" />

                </LinearLayout>

                </FrameLayout>

            </androidx.constraintlayout.widget.ConstraintLayout>

            <!-- Invisible toolbar placeholder for CollapsingToolbarLayout -->
            <androidx.appcompat.widget.Toolbar
                android:id="@+id/playerToolbarPlaceholder"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:visibility="invisible"
                app:layout_collapseMode="pin" />

            <!-- Auto-hiding overlay controls -->
            <FrameLayout
                android:id="@+id/playerOverlayControls"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:visibility="visible">

                <!-- Top bar with minimize, quality, cast -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:paddingStart="@dimen/spacing_sm"
                    android:paddingTop="@dimen/spacing_sm"
                    android:paddingEnd="@dimen/spacing_sm"
                    android:paddingBottom="@dimen/spacing_xs">

                    <!-- Minimize Button - Top Left -->
                    <ImageButton
                        android:id="@+id/minimizeButton"
                        android:layout_width="@dimen/touch_target_min"
                        android:layout_height="@dimen/touch_target_min"
                        android:background="?attr/selectableItemBackgroundBorderless"
                        android:src="@drawable/ic_arrow_back"
                        android:contentDescription="@string/navigate_back"
                        app:tint="@android:color/white" />

                    <View
                        android:layout_width="0dp"
                        android:layout_height="1dp"
                        android:layout_weight="1" />

                    <!-- Quality Button -->
                    <ImageButton
                        android:id="@+id/qualityButton"
                        android:layout_width="@dimen/touch_target_min"
                        android:layout_height="@dimen/touch_target_min"
                        android:background="?attr/selectableItemBackgroundBorderless"
                        android:src="@android:drawable/ic_menu_view"
                        android:contentDescription="@string/player_quality_selector"
                        android:tint="@android:color/white" />

                    <!-- Chromecast Button -->
                    <androidx.mediarouter.app.MediaRouteButton
                        android:id="@+id/castButton"
                        android:layout_width="@dimen/touch_target_min"
                        android:layout_height="@dimen/touch_target_min"
                        android:background="?attr/selectableItemBackgroundBorderless"
                        android:contentDescription="@string/player_action_cast"
                        app:mediaRouteButtonTint="@android:color/white" />

                </LinearLayout>

                <!-- Fullscreen Button - Bottom Right (inside overlay controls) -->
                <ImageButton
                    android:id="@+id/fullscreenButton"
                    android:layout_width="@dimen/touch_target_min"
                    android:layout_height="@dimen/touch_target_min"
                    android:layout_gravity="bottom|end"
                    android:layout_marginEnd="@dimen/spacing_md"
                    android:layout_marginBottom="@dimen/player_controls_offset"
                    android:background="?attr/selectableItemBackgroundBorderless"
                    android:src="@drawable/ic_fullscreen"
                    android:contentDescription="@string/player_action_fullscreen"
                    app:tint="@android:color/white" />

            </FrameLayout>

        </com.google.android.material.appbar.CollapsingToolbarLayout>

    </com.google.android.material.appbar.AppBarLayout>

    <androidx.core.widget.NestedScrollView
        android:id="@+id/playerScrollView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:clipToPadding="false"
        android:overScrollMode="never"
        android:paddingBottom="@dimen/bottom_nav_height"
        app:layout_behavior="@string/appbar_scrolling_view_behavior">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <!-- Video Title -->
            <TextView
                android:id="@+id/videoTitle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="@dimen/spacing_md"
                android:textAlignment="viewStart"
                android:textColor="?attr/colorOnSurface"
                android:textSize="@dimen/text_section_title"
                android:textStyle="bold"
                tools:text="Video Title" />

            <!-- Author Name -->
            <TextView
                android:id="@+id/authorName"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingStart="@dimen/spacing_md"
                android:paddingEnd="@dimen/spacing_md"
                android:textAlignment="viewStart"
                android:textColor="@color/primary_green"
                android:textSize="@dimen/text_body"
                tools:text="Author Name" />

            <!-- Views and Date -->
            <TextView
                android:id="@+id/videoStats"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingStart="@dimen/spacing_md"
                android:paddingTop="@dimen/spacing_xs"
                android:paddingEnd="@dimen/spacing_md"
                android:paddingBottom="@dimen/spacing_sm"
                android:textAlignment="viewStart"
                android:textColor="?android:attr/textColorSecondary"
                android:textSize="@dimen/text_caption"
                tools:text="0 views â€¢ Jan 1, 2025" />

            <!-- Description Card -->
            <com.google.android.material.card.MaterialCardView
                android:id="@+id/descriptionCard"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/spacing_md"
                android:layout_marginTop="@dimen/spacing_sm"
                android:layout_marginEnd="@dimen/spacing_md"
                android:layout_marginBottom="@dimen/spacing_sm"
                app:cardCornerRadius="@dimen/thumbnail_corner_radius"
                app:cardElevation="0dp"
                app:strokeWidth="0dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <!-- Description Header -->
                    <LinearLayout
                        android:id="@+id/descriptionHeader"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="?attr/selectableItemBackground"
                        android:clickable="true"
                        android:focusable="true"
                        android:orientation="horizontal"
                        android:padding="@dimen/spacing_sm"
                        android:contentDescription="@string/player_toggle_description">

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="@string/player_description"
                            android:textAlignment="viewStart"
                            android:textColor="?attr/colorOnSurface"
                            android:textSize="@dimen/text_body"
                            android:textStyle="bold" />

                        <ImageView
                            android:id="@+id/descriptionArrow"
                            android:layout_width="@dimen/icon_small"
                            android:layout_height="@dimen/icon_small"
                            android:src="@drawable/ic_expand_more"
                            app:tint="?attr/colorOnSurface"
                            android:importantForAccessibility="no" />

                    </LinearLayout>

                    <!-- Description Content -->
                    <TextView
                        android:id="@+id/videoDescription"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:paddingStart="@dimen/spacing_sm"
                        android:paddingEnd="@dimen/spacing_sm"
                        android:paddingBottom="@dimen/spacing_sm"
                        android:text="@string/player_no_description"
                        android:textAlignment="viewStart"
                        android:textColor="?attr/colorOnSurface"
                        android:textSize="@dimen/text_body"
                        android:visibility="gone" />

                </LinearLayout>

            </com.google.android.material.card.MaterialCardView>

            <!-- Action Buttons -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:padding="@dimen/spacing_md"
                android:gravity="center"
                android:weightSum="4">

                <!-- Favorite Button -->
                <LinearLayout
                    android:id="@+id/favoriteButton"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical"
                    android:gravity="center"
                    android:background="?attr/selectableItemBackground"
                    android:clickable="true"
                    android:focusable="true"
                    android:padding="@dimen/spacing_sm"
                    android:contentDescription="@string/player_action_favorite">

                    <ImageView
                        android:id="@+id/favoriteIcon"
                        android:layout_width="@dimen/icon_small"
                        android:layout_height="@dimen/icon_small"
                        android:src="@drawable/ic_favorite_border"
                        app:tint="@color/primary_green" />

                    <TextView
                        android:id="@+id/favoriteLabel"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/spacing_xs"
                        android:text="@string/player_action_favorite"
                        android:textAlignment="center"
                        android:textColor="@color/primary_green"
                        android:textSize="@dimen/text_caption" />

                </LinearLayout>

                <!-- Share Button -->
                <LinearLayout
                    android:id="@+id/shareButton"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical"
                    android:gravity="center"
                    android:background="?attr/selectableItemBackground"
                    android:clickable="true"
                    android:focusable="true"
                    android:padding="@dimen/spacing_sm"
                    android:contentDescription="@string/player_action_share">

                    <ImageView
                        android:layout_width="@dimen/icon_small"
                        android:layout_height="@dimen/icon_small"
                        android:src="@drawable/ic_share"
                        app:tint="@color/primary_green" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/spacing_xs"
                        android:text="@string/player_action_share"
                        android:textAlignment="center"
                        android:textColor="@color/primary_green"
                        android:textSize="@dimen/text_caption" />

                </LinearLayout>

                <!-- Download Button -->
                <LinearLayout
                    android:id="@+id/downloadButton"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical"
                    android:gravity="center"
                    android:background="?attr/selectableItemBackground"
                    android:clickable="true"
                    android:focusable="true"
                    android:padding="@dimen/spacing_sm"
                    android:contentDescription="@string/player_action_download">

                    <ImageView
                        android:layout_width="@dimen/icon_small"
                        android:layout_height="@dimen/icon_small"
                        android:src="@drawable/outline_download_24"
                        app:tint="@color/primary_green" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/spacing_xs"
                        android:text="@string/player_button_download"
                        android:textAlignment="center"
                        android:textColor="@color/primary_green"
                        android:textSize="@dimen/text_caption" />

                </LinearLayout>

                <!-- Audio Only Button -->
                <LinearLayout
                    android:id="@+id/audioButton"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical"
                    android:gravity="center"
                    android:background="?attr/selectableItemBackground"
                    android:clickable="true"
                    android:focusable="true"
                    android:padding="@dimen/spacing_sm"
                    android:contentDescription="@string/player_audio_only_label">

                    <ImageView
                        android:layout_width="@dimen/icon_small"
                        android:layout_height="@dimen/icon_small"
                        android:src="@drawable/ic_headphones"
                        app:tint="@color/primary_green" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/spacing_xs"
                        android:text="@string/player_action_audio"
                        android:textAlignment="center"
                        android:textColor="@color/primary_green"
                        android:textSize="@dimen/text_caption" />

                </LinearLayout>

            </LinearLayout>

            <!-- Divider -->
            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="?attr/colorOutline" />

    <!-- Up Next Section -->
    <TextView
        android:id="@+id/upNextHeader"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="@dimen/spacing_md"
        android:text="@string/player_up_next_header"
        android:textAlignment="viewStart"
        android:textColor="?attr/colorOnSurface"
        android:textSize="@dimen/text_subtitle"
        android:textStyle="bold" />

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/upNextList"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:nestedScrollingEnabled="false"
                android:paddingBottom="@dimen/spacing_md" />

            <!-- Hidden Views for Compatibility -->
            <TextView
                android:id="@+id/playerStatus"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:visibility="gone" />

            <TextView
                android:id="@+id/currentlyPlaying"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:visibility="gone" />

            <TextView
                android:id="@+id/audioOnlyLabel"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:visibility="gone" />

            <Switch
                android:id="@+id/audioOnlyToggle"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:visibility="gone" />

            <Button
                android:id="@+id/completeButton"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:visibility="gone" />

            <TextView
                android:id="@+id/downloadStatus"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:visibility="gone" />

            <TextView
                android:id="@+id/excludedMessage"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:visibility="gone" />

            <TextView
                android:id="@+id/upNextEmpty"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:visibility="gone" />

            <TextView
                android:id="@+id/analyticsHeader"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:visibility="gone" />

            <TextView
                android:id="@+id/analyticsStatus"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:visibility="gone" />

        </LinearLayout>

    </androidx.core.widget.NestedScrollView>

</androidx.coordinatorlayout.widget.CoordinatorLayout>
