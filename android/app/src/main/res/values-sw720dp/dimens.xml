<?xml version="1.0" encoding="utf-8"?>
<resources>
    <!-- Large Tablet / TV (10"+ devices, 1080p TV boxes) - Responsive Dimensions -->

    <!-- Navigation (TV/Large Tablets - optimized for 10-foot viewing) -->
    <dimen name="bottom_nav_height">0dp</dimen>
    <dimen name="navigation_rail_width">96dp</dimen>  <!-- Wider rail for TV D-pad navigation -->
    <dimen name="navigation_rail_icon_size">32dp</dimen>  <!-- Larger icons for 10-foot viewing -->
    <dimen name="navigation_rail_label_size">14sp</dimen>  <!-- Larger labels for TV readability -->

    <!-- Grid (more columns for larger screens) -->
    <dimen name="grid_gutter">32dp</dimen>
    <dimen name="grid_item_min_width">200dp</dimen>
    <integer name="grid_span_count_default">4</integer>

    <!-- Player (optimized for Full HD displays) -->
    <dimen name="player_portrait_height">480dp</dimen>  <!-- was 240dp on phone, 360dp on tablet -->
    <dimen name="player_min_height">240dp</dimen>  <!-- was 120dp on phone, 180dp on tablet -->
    <dimen name="player_controls_offset">72dp</dimen>

    <!-- Thumbnails (constrained, not oversized) -->
    <dimen name="thumbnail_height">220dp</dimen>  <!-- modest increase, not 320dp -->
    <dimen name="thumbnail_height_grid">140dp</dimen>  <!-- modest increase, not 180dp -->
    <dimen name="playlist_thumbnail_size">120dp</dimen>  <!-- modest increase, not 160dp -->

    <!-- Content -->
    <dimen name="content_max_width">1600dp</dimen>  <!-- wider constraint for large screens -->

    <!-- Spacing (increased further) -->
    <dimen name="spacing_md">24dp</dimen>  <!-- was 16dp on phone, 20dp on tablet -->
    <dimen name="spacing_lg">40dp</dimen>  <!-- was 24dp on phone, 32dp on tablet -->
    <dimen name="spacing_xl">64dp</dimen>  <!-- was 32dp on phone, 48dp on tablet -->
    <dimen name="spacing_xxxl">128dp</dimen>  <!-- was 96dp on phone, 112dp on tablet -->

    <!-- Touch Targets (larger for TV D-pad navigation) -->
    <dimen name="touch_target_min">56dp</dimen>  <!-- was 48dp -->
    <dimen name="touch_target_button">64dp</dimen>  <!-- was 56dp -->

    <!-- Icons (larger for 10-foot viewing) -->
    <dimen name="icon_medium">40dp</dimen>  <!-- was 32dp on phone, 36dp on tablet -->
    <dimen name="icon_large">64dp</dimen>  <!-- was 48dp on phone, 56dp on tablet -->
    <dimen name="icon_xlarge">128dp</dimen>  <!-- was 96dp -->
    <dimen name="badge_icon_size">28dp</dimen>  <!-- was 20dp on phone, 24dp on tablet -->

    <!-- Avatar Sizes (larger) -->
    <dimen name="avatar_medium">72dp</dimen>  <!-- was 56dp on phone, 64dp on tablet -->
    <dimen name="avatar_large">128dp</dimen>  <!-- was 96dp on phone, 112dp on tablet -->

    <!-- Screen Type -->
    <bool name="is_tablet">true</bool>
    <bool name="is_large_screen">true</bool>
    <bool name="use_two_pane_layout">true</bool>

    <!-- Home Screen - Large Tablet/TV (more cards visible, content centered) -->
    <dimen name="home_horizontal_margin">32dp</dimen>  <!-- More padding on large screens -->
    <dimen name="home_vertical_section_spacing">40dp</dimen>
    <dimen name="home_channel_card_width">120dp</dimen>
    <dimen name="home_channel_avatar_size">88dp</dimen>
    <dimen name="home_playlist_card_width">280dp</dimen>  <!-- show 3-4 at once -->
    <dimen name="home_video_card_width">320dp</dimen>  <!-- show 3-4 at once -->
    <dimen name="home_card_spacing">20dp</dimen>

    <!-- Home Responsive Card Counts (Large Tablet/TV) -->
    <integer name="home_cards_visible_channels">6</integer>
    <integer name="home_cards_visible_playlists">5</integer>
    <integer name="home_cards_visible_videos">5</integer>

    <!-- Onboarding (Large Tablet/TV) - smaller icon to leave room for text -->
    <dimen name="onboarding_icon_container_size">180dp</dimen>
    <dimen name="onboarding_icon_size">90dp</dimen>
    <dimen name="onboarding_title_size">36sp</dimen>
    <dimen name="onboarding_description_size">20sp</dimen>
    <dimen name="onboarding_padding">40dp</dimen>
    <dimen name="onboarding_button_height">64dp</dimen>
    <dimen name="onboarding_button_corner_radius">32dp</dimen>

    <!-- Channel Detail Screen (Large Tablet / TV) -->
    <dimen name="channel_banner_height">280dp</dimen>
    <dimen name="channel_avatar_size">112dp</dimen>
    <dimen name="channel_avatar_stroke">4dp</dimen>
    <dimen name="channel_header_overlap">56dp</dimen>
    <dimen name="channel_header_horizontal_margin">48dp</dimen>

    <!-- Playlist Detail Screen (Large Tablet / TV) -->
    <dimen name="playlist_banner_height">280dp</dimen>
    <dimen name="banner_gradient_top_height">96dp</dimen>
    <dimen name="playlist_header_horizontal_margin">48dp</dimen>

    <!-- Playlist Hero Component (Large Tablet / TV) -->
    <dimen name="playlist_hero_height">320dp</dimen>
    <dimen name="playlist_hero_thumbnail_max_width">560dp</dimen>

    <!-- Typography sizes (larger for TV viewing distance) -->
    <dimen name="text_headline">24sp</dimen>
    <dimen name="text_subtitle">18sp</dimen>
    <dimen name="text_body">16sp</dimen>
    <dimen name="text_caption">14sp</dimen>

    <!-- Channel Shorts Grid (TV) -->
    <integer name="channel_shorts_span_count">5</integer>

    <!-- Error State Component (Large Tablet / TV) -->
    <dimen name="error_body_max_width">480dp</dimen>
    <dimen name="button_min_width">160dp</dimen>

    <!-- Download/Favorite List Item Thumbnail (Large Tablet - larger for readability) -->
    <dimen name="favorite_thumbnail_width">200dp</dimen>
    <dimen name="favorite_thumbnail_height">112dp</dimen>
</resources>
