<?xml version="1.0" encoding="utf-8"?>
<!-- Large tablet/TV layout for Favorites screen (sw720dp) -->
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="?attr/colorSurface">

    <!-- Toolbar -->
    <com.google.android.material.appbar.MaterialToolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:background="?attr/colorSurface"
        app:elevation="@dimen/elevation_sm"
        app:navigationIcon="?attr/homeAsUpIndicator"
        app:title="@string/favorites_title"
        app:titleTextAppearance="@style/TextAppearance.MaterialComponents.Headline6"
        app:titleTextColor="?attr/colorOnSurface"
        app:menu="@menu/favorites_menu"/>

    <!-- Large tablet: Wider margins, more padding for TV/large screens -->
    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:paddingStart="@dimen/spacing_xl"
        android:paddingEnd="@dimen/spacing_xl"
        android:paddingTop="@dimen/spacing_lg">

        <com.google.android.material.card.MaterialCardView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginBottom="@dimen/bottom_nav_height"
            app:cardBackgroundColor="?attr/colorSurface"
            app:cardCornerRadius="@dimen/corner_radius_large"
            app:cardElevation="0dp">

            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <!-- Favorites list -->
                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/favoritesRecyclerView"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:clipToPadding="false"
                    android:padding="@dimen/spacing_lg"/>

                <!-- Empty state -->
                <LinearLayout
                    android:id="@+id/emptyFavorites"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    android:gravity="center"
                    android:padding="@dimen/spacing_xxl"
                    android:visibility="gone">

                    <ImageView
                        android:layout_width="@dimen/icon_xxlarge"
                        android:layout_height="@dimen/icon_xxlarge"
                        android:src="@drawable/ic_favorite_border"
                        android:alpha="0.3"
                        app:tint="?android:attr/textColorSecondary"
                        android:importantForAccessibility="no"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/spacing_lg"
                        android:text="@string/favorites_empty_title"
                        android:textAlignment="center"
                        android:gravity="center"
                        android:textSize="@dimen/text_headline"
                        android:textColor="?android:attr/textColorSecondary"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/spacing_sm"
                        android:text="@string/favorites_empty_subtitle"
                        android:textAlignment="center"
                        android:textSize="@dimen/text_subtitle"
                        android:textColor="?android:attr/textColorSecondary"
                        android:gravity="center"/>

                </LinearLayout>

            </FrameLayout>

        </com.google.android.material.card.MaterialCardView>

    </FrameLayout>

</LinearLayout>
