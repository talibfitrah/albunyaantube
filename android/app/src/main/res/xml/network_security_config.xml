<?xml version="1.0" encoding="utf-8"?>
<network-security-config>
    <!--
        RELEASE BUILD - Enforces HTTPS for production security.

        Cleartext HTTP is ONLY permitted for localhost (emulator testing).
        All external servers (including VPS) MUST use HTTPS in release builds.

        For debug builds with cleartext VPS access, see:
        src/debug/res/xml/network_security_config.xml

        PRODUCTION DEPLOYMENT:
        - Configure HTTPS/TLS on production server (Let's Encrypt recommended)
        - Update api.base.url in local.properties to https://YOUR_DOMAIN
    -->
    <domain-config cleartextTrafficPermitted="true">
        <!-- Emulator localhost only - safe for release builds -->
        <domain includeSubdomains="true">10.0.2.2</domain>
        <domain includeSubdomains="true">localhost</domain>
        <domain includeSubdomains="true">127.0.0.1</domain>
    </domain-config>

    <!-- Default: require HTTPS for all external domains (enforced for production) -->
    <base-config cleartextTrafficPermitted="false" />
</network-security-config>
