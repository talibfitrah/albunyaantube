<?xml version="1.0" encoding="utf-8"?>
<network-security-config>
    <!--
        SECURITY WARNING: Cleartext (HTTP) traffic is insecure!

        This config ONLY permits cleartext traffic for LOCAL DEVELOPMENT AND TESTING:
        - Emulator localhost (10.0.2.2, 127.0.0.1)
        - Physical device on local network (192.168.1.167)

        PRODUCTION DEPLOYMENT REQUIREMENTS:
        - Configure HTTPS/TLS on production server (recommended: Let's Encrypt)
        - Update api.base.url in local.properties to use https://YOUR_DOMAIN
        - Deploy app with HTTPS-only base-config (no domain-config cleartext)

        DO NOT add production server IPs to this config - use HTTPS only!
    -->
    <domain-config cleartextTrafficPermitted="true">
        <!-- Emulator localhost variations -->
        <domain includeSubdomains="true">10.0.2.2</domain>
        <domain includeSubdomains="true">localhost</domain>
        <domain includeSubdomains="true">127.0.0.1</domain>

        <!--
            Physical device testing on local network ONLY
            Replace with your dev machine's local IP if different
        -->
        <domain includeSubdomains="true">192.168.1.167</domain>
    </domain-config>

    <!--
        PRODUCTION/VPS SETUP:
        Do NOT add public IPs here for cleartext traffic.
        Instead:
        1. Configure HTTPS on your VPS (Let's Encrypt recommended)
        2. Update api.base.url in local.properties to https://your-domain.com
        3. The base-config below enforces HTTPS for all non-local domains
    -->

    <!-- Default: require HTTPS for all other domains (enforced for production) -->
    <base-config cleartextTrafficPermitted="false" />
</network-security-config>
