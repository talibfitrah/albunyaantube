<?xml version="1.0" encoding="utf-8"?>
<network-security-config>
    <!--
        WARNING: Cleartext (HTTP) traffic is insecure and should ONLY be used for:
        - Local development (emulator/localhost)
        - Testing on local network

        PRODUCTION DEPLOYMENT REQUIREMENTS:
        - Configure HTTPS/TLS on your production server (use Let's Encrypt)
        - Remove production server IPs from this config
        - Update api.base.url in local.properties to use https://

        For production, this config should ONLY contain local development IPs.
    -->
    <domain-config cleartextTrafficPermitted="true">
        <!-- Allow localhost variations for emulator -->
        <domain includeSubdomains="true">10.0.2.2</domain>
        <domain includeSubdomains="true">localhost</domain>
        <domain includeSubdomains="true">127.0.0.1</domain>

        <!-- For physical device testing on local network -->
        <domain includeSubdomains="true">192.168.1.167</domain>

        <!-- For VPS testing (HTTP only - use HTTPS in production!) -->
        <domain includeSubdomains="true">72.60.179.47</domain>
    </domain-config>

    <!-- Default: require HTTPS for all other domains -->
    <base-config cleartextTrafficPermitted="false" />
</network-security-config>

