<?xml version="1.0" encoding="utf-8"?>
<network-security-config>
    <!-- Allow cleartext (HTTP) traffic for local development and VPS -->
    <domain-config cleartextTrafficPermitted="true">
        <!-- Allow localhost variations for emulator -->
        <domain includeSubdomains="true">10.0.2.2</domain>
        <domain includeSubdomains="true">localhost</domain>
        <domain includeSubdomains="true">127.0.0.1</domain>

        <!-- Allow local network IP addresses (192.168.x.x) for physical device -->
        <domain includeSubdomains="true">192.168.1.167</domain>

        <!-- Allow VPS server -->
        <domain includeSubdomains="true">72.60.179.47</domain>
    </domain-config>

    <!-- Default: require HTTPS for all other domains -->
    <base-config cleartextTrafficPermitted="false" />
</network-security-config>
