<?xml version="1.0" encoding="utf-8"?>
<network-security-config>
    <!--
        DEBUG BUILD ONLY - Allows cleartext HTTP for development/testing.

        This config permits cleartext traffic for:
        - Emulator localhost (10.0.2.2, 127.0.0.1)
        - Physical device on local network (192.168.1.167)
        - VPS testing server (72.60.179.47)

        NOTE: This file is ONLY used in debug builds. Release builds use the
        main/res/xml/network_security_config.xml which enforces HTTPS.
    -->
    <domain-config cleartextTrafficPermitted="true">
        <!-- Emulator localhost variations -->
        <domain includeSubdomains="true">10.0.2.2</domain>
        <domain includeSubdomains="true">localhost</domain>
        <domain includeSubdomains="true">127.0.0.1</domain>

        <!-- Physical device testing on local network -->
        <domain includeSubdomains="true">192.168.1.167</domain>

        <!-- VPS for development testing (cleartext allowed in debug only) -->
        <domain includeSubdomains="true">72.60.179.47</domain>
    </domain-config>

    <!-- Default: require HTTPS for all other domains -->
    <base-config cleartextTrafficPermitted="false" />
</network-security-config>
